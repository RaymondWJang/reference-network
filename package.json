    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RaymondWJang/weaver.git"
  },
  "author": {
    "name": "Raymond W. Chang",
    "email": "raymond.w.jang@gmail.com"
  },
  "bugs": {
    "url": "https://github.com/RaymondWJang/weaver/issues"
  },
  "homepage": "https://github.com/RaymondWJang/weaver",
  "dependencies": {
    "dexie": "^4.0.7",
    "esbuild": "^0.18.1",
    "eslint": "^8.42.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^46.2.6",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "mkdirp": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^5.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
